#!/bin/sh -e

case "$1" in
    alternatives|build|checksum|download|install|list|remove|search|update|version|''|help-ext|chroot|depends|export|fork|help|link|maintainer|manifest|new|orphans|outdated|owns|reset|revdepends|size)
        /usr/bin/kiss "$@"
    ;;
    ro)
        while kiss o | grep -qv "${2:-metapkg}"; do
            kiss r `kiss o | grep -v "${2:-metapkg}" | tr '\n' ' '`
        done
    ;;
    *)
        _1="$1"
        shift 1
        for _action in $(echo "$_1" | grep -o .); do
            /usr/bin/kiss "$_action" "$@"
        done
    ;;
esac
